# Binance Testnet API Keys
# Get your keys at: https://testnet.binance.vision/
BINANCE_TESTNET_API_KEY=your_api_key_here
BINANCE_TESTNET_API_SECRET=your_secret_key_here

# Gate.io Testnet API Keys
# Get your keys at: https://www.gate.io/testnet
GATE_TESTNET_API_KEY=your_api_key_here
GATE_TESTNET_API_SECRET=your_secret_key_here

# Database path (optional)
# BOT_DB=trading.db

# Authentication (REQUIRED)
# Username for login
AUTH_USERNAME=admin

# Password hash (bcrypt)
# Default password is 'admin' - CHANGE THIS IN PRODUCTION!
# To generate a new password hash, run: python3 scripts/generate_password_hash.py
AUTH_PASSWORD_HASH=$2b$12$T8Gtuo6rbh1plcf5yhGTg.dQpGyvDp7uKJVgcLi/RN56RtuNR8o/a

# Secret key for session management (REQUIRED)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# SMTP Email Configuration (for price alerts)
# For Gmail: Use an App Password (https://myaccount.google.com/apppasswords)
# Requires 2FA to be enabled on your Google account
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=your-email@gmail.com
